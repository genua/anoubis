#!/bin/sh
# -*- mode: sh -*-

LINT=@LINT@

if ! test -x ${LINT}; then
	echo "LINT not found" >&2
	exit 1
fi

STDOUT=`mktemp` || exit 1
STDERR=`mktemp` || exit 1
trap 'rm -f $STDOUT $STDERR' INT QUIT TERM EXIT

${LINT} $* 2>$STDERR >$STDOUT

# XXX ignore any error codes for now. lint is behaving strange here...

cat $STDOUT
